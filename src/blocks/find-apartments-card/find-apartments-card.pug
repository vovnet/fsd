include ../range-dates/range-dates
include ../long-button/long-button
include ../configuration-dropdown/configuration-dropdown

mixin apartments()
  .find-apartments-card
    h1.find-apartments-card__title Найдем номера под ваши пожелания
    form.find-apartments-card__form(action="/mock-address", method="get")
      .find-apartments-card__body
        .find-apartments-card__item.find-apartments-card__item_high
          +range-dates({
            inLabel: "Прибытие",
            outLabel: "Выезд"
          })
        .find-apartments-card__item.find-apartments-card__item_high.js-find-apartments-card__dropdown
          h3.find-apartments-card__subtitle Гости
          +configuration-dropdown({ name: "find-apartments" })
      .find-apartments-card__button
        +long-button("Подобрать номер")
